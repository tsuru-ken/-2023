<h1><%= t('.sign_up_page') %></h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>エラーが<%= pluralize(@user.errors.count, "件") %>発生しました</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:admin, @user], local: true) do |f| %>
  <div>
    <%= f.label :name, t('.name')  %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= f.label :email, t('.eamil')%><br>
    <%= f.email_field :email, class: "form-control"%>
  </div>

  <div>
    <%= f.label :password, t('.password')%><br>
    <%= f.password_field :password, class: "form-control"%>
  </div>

  <div>
    <%= f.label :password_confirmation, t('.password_confirmation')%><br>
    <%= f.password_field :password_confirmation, class: "form-control"%>
  </div>

  <div class="checkbox">
    <%= f.label :admin, t('.admin')%><br>
    <%= f.check_box :admin, {}, true, false %>
  </div>

  <div >
    <%= f.submit id: 'create-user', class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to '戻る', admin_users_path%>